{
    "extends": [
      "stylelint-config-standard-scss",
      "stylelint-config-prettier-scss"
    ],
    "rules": {
        "at-rule-no-unknown": [
          true,
          {
            "ignoreAtRules": [
              "tailwind",
              "apply",
              "variants",
              "responsive",
              "screen",
              "layer"
            ]
          }
        ],
        "scss/at-rule-no-unknown": [
            true,
            {
              "ignoreAtRules": [
                "tailwind",
                "apply",
                "variants",
                "responsive",
                "screen",
                "layer"
              ]
            }
          ],
        "no-invalid-position-at-import-rule":null,
        "declaration-block-trailing-semicolon": null,
        "no-descending-specificity": null
      }
  }